<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: "/layouts/header", locals: {name: "LOG OUT", f: f} %>

  <div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", class: "form"  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "form" %>
  </div>

<% end %>

